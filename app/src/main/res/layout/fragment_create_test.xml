<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/marginLarge">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_question_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp">
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:textSize="@dimen/txtLittleSize"
                android:text="Введите текст первого вопроса"/>


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/input_question_one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/your_answer"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:boxCornerRadiusBottomEnd="30dp"
                app:boxCornerRadiusTopStart="30dp"
                app:boxCornerRadiusBottomStart="30dp"
                app:boxCornerRadiusTopEnd="30dp"
                android:paddingLeft="@dimen/marginLittle"
                android:paddingRight="@dimen/marginLittle"
                android:paddingBottom="@dimen/marginLittle">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_question_one"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    />

            </com.google.android.material.textfield.TextInputLayout>


            <TextView
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:textSize="@dimen/txtLittleSize"
                android:text="Введите ответ"/>


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/input_answer_one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/your_answer"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:boxCornerRadiusBottomEnd="30dp"
                app:boxCornerRadiusTopStart="30dp"
                app:boxCornerRadiusBottomStart="30dp"
                app:boxCornerRadiusTopEnd="30dp"
                android:paddingLeft="@dimen/marginLittle"
                android:paddingRight="@dimen/marginLittle"
                android:paddingBottom="@dimen/marginLittle">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_answer_one"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    />

            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/cv_question_two"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp">
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:textSize="@dimen/txtLittleSize"
                android:text="Введите текст второго вопроса"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/input_question_two"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/your_answer"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:boxCornerRadiusBottomEnd="30dp"
                app:boxCornerRadiusTopStart="30dp"
                app:boxCornerRadiusBottomStart="30dp"
                app:boxCornerRadiusTopEnd="30dp"
                android:paddingLeft="@dimen/marginLittle"
                android:paddingRight="@dimen/marginLittle"
                android:paddingBottom="@dimen/marginLittle">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_question_two"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    />

            </com.google.android.material.textfield.TextInputLayout>


            <TextView
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:textSize="@dimen/txtLittleSize"
                android:text="Введите ответ"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/input_answer_two"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/your_answer"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:boxCornerRadiusBottomEnd="30dp"
                app:boxCornerRadiusTopStart="30dp"
                app:boxCornerRadiusBottomStart="30dp"
                app:boxCornerRadiusTopEnd="30dp"
                android:paddingLeft="@dimen/marginLittle"
                android:paddingRight="@dimen/marginLittle"
                android:paddingBottom="@dimen/marginLittle">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_answer_two"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    />

            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/cv_question_three"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp">
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:textSize="@dimen/txtLittleSize"
                android:text="Введите текст третьего вопроса"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/input_question_tree"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/your_answer"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:boxCornerRadiusBottomEnd="30dp"
                app:boxCornerRadiusTopStart="30dp"
                app:boxCornerRadiusBottomStart="30dp"
                app:boxCornerRadiusTopEnd="30dp"
                android:paddingLeft="@dimen/marginLittle"
                android:paddingRight="@dimen/marginLittle"
                android:paddingBottom="@dimen/marginLittle">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_question_three"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    />

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:textSize="@dimen/txtLittleSize"
                android:text="Введите ответ"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/et_answer_three"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/your_answer"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:boxCornerRadiusBottomEnd="30dp"
                app:boxCornerRadiusTopStart="30dp"
                app:boxCornerRadiusBottomStart="30dp"
                app:boxCornerRadiusTopEnd="30dp"
                android:paddingLeft="@dimen/marginLittle"
                android:paddingRight="@dimen/marginLittle"
                android:paddingBottom="@dimen/marginLittle">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/nameInputEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    />

            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>
    </ScrollView>
</FrameLayout>
